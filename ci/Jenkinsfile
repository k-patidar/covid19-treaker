pipeline {
    agent any
    environment {
        IMAGE_NAME = "hello-world-gui"
        IMAGE_TAG  = "latest"
        PORT       = "5000"
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/k-patidar/covid19-treaker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Make sure Dockerfile is in repo root
                sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
            }
        }

        stage('Stop Old Container') {
            steps {
                sh "docker rm -f ${IMAGE_NAME} || true"
            }
        }

        stage('Run Container') {
            steps {
                sh "docker run -d -p ${PORT}:${PORT} --name ${IMAGE_NAME} ${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }
    }
    post {
        success {
            echo " Local Docker build & run successful. Access at http://localhost:${PORT}"
        }
        failure {
            echo " Build failed. Check Dockerfile, repo structure, and local Docker daemon."
        }
    }
}



