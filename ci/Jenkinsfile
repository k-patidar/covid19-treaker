pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/k-patidar/covid19-treaker.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-user') {
                        def image = docker.build('kpatidar4803/covid-tracker')
                        image.push('latest')
                    }
                }
            }
        }
    }
}

